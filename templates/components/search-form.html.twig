
<section class="py-2" style="background-color: white;">
    {{ form_start(form) }}
      <div class="fo">
          {{ form_errors(form) }}
      </div>

      <div class="" style="margin: 3% 10%;">
        <div class="d-flex">
          <div class="flex-grow-1">
            {{ form_row(form.titre, {
              label: false,
              attr: {
                'class': 'form-control form-control-lg search-input'
              }
            }) }}
          </div>
          <div class="flex-grow-1">
            {{ form_row(form.lieu, {
              label: false,
              attr: {
                'class': 'form-control form-control-lg search-input'
              }
            }) }}
          </div>
        </div>
        <div class="d-flex justify-content-center align-items-center">
          <div class="flex-grow-1 d-flex gap-3 mb-3">
            <div class="flex-grow-1 ">
              {{ form_row(form.startDate) }}
            </div>
            <div class="flex-grow-1 ">
              {{ form_row(form.endDate) }}
            </div>
          </div>
          <div class="ms-4">
            {{ form_row(form.Recherche, {
                attr: {
                    'class': 'btn btn-dark btn-lg py-3 px-5'
                }
            }) }}
          </div>
        </div>
        
      </div>
    {{ form_end(form) }}
</section>