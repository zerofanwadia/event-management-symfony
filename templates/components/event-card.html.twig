<div
    class="event-card w-100 border m-0 p-0 flex-grow-1 shadow d-flex flex-column justify-content-between"
>
    <div>
        <a href="{{path('show_event',{id:event.id})}}">
            <div
                style="
                    width: 100%; padding-top: 56%;
                    background-image: url('{{event.image ? asset("uploads/"~event.image) : asset('image/null.jpg' ) }}');
                    background-size: cover; background-position: center;
                "
            ></div>
            
        </a>
        <div class="p-4 pb-0">
            <h4>{{event.titre}}</h4>
            <span>{{event.lieu}}</span>
        </div>
    </div>
    <div class="p-4 d-flex justify-content-between align-items-center">
        <span class="fs-5 fw-semibold" style="color:#b35017;">{{event.date | date("d/m/Y") }} </span>
        <div class="d-flex align-items-center">
            {% if event.isArchived == false %}
                {% if event.canReserve(app.user) %}
                    <a class="btn btn-sm btn-info" href="{{path('app_reserv',{id:event.id})}}">ticket</a>
                {% endif %}
            {% else %}
                <i class="text-danger" >archivÃ©</i> 
            {% endif %}
            {% if reservation is defined %}
                <a class="btn btn-sm ms-2 btn-danger" href="{{path('vos_reserve_delet',{ id:reservation.id })}}">
                    <i class="fa-sharp fa-solid fa-trash"></i>
                </a>
            {% endif %}
        </div>
    </div>
</div>