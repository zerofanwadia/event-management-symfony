{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

<section class="d-flex justify-content-center align-items-center p-5 min-height-full">
    <div class="card container p-0" style="max-width: 500px;">
        <div class="card-header p-3 text-center special-bg-color">
            <h3>Se connecter</h3>
        </div>
        <div class="card-body">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            
                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                
                <div class="mb-4">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div class="mb-4">
                    <label for="inputPassword">Mot de pass</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
            
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
            
                <div class="d-flex flex-column justify-content-center">
                    <button class="btn btn-dark btn-lg py-2 px-4" type="submit">Connexion</button>
                    <a class="mt-2 mb-1 text-center" href="#">Mot de pass oubli√©?</a>
                </div>
            </form>
            
        </div>
    </div>
</section>
{% endblock %}
